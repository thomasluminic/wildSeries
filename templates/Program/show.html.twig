{% extends 'base.html.twig' %}
{% block title %}{{ program.title }}{% endblock %}
{% block body %}
    <div class="media">
        <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0 text-primary">{{ program.title }}</h1>
            <p class="text-secondary">{{ program.summary }}</p>
            <p class="text-secondary">Categorie : {{ program.category.name }}</p>
        </div>
    </div>
    <h2 class="text-primary">Acteur :</h2>
    <ul>
        {% for actor in program.actors %}
            <a href="/actor/{{ actor.slug }}" class="text-secondary">{{ actor.name }} </a>
        {% else %}
            <li>Aucun acteur pour cette s√©rie</li>
        {% endfor %}
    </ul>
    {% for season in program.seasons %}
        <h1><a href="{{ path('season', {seasonId: season.id}) }}">Season {{ season.number }}</a> / {{ season.year }}</h1>
        <p>{{ season.description }}</p>
    {% endfor %}
    <a href="{{ path('index') }}">
        Retour au programme
    </a>
{% endblock %}
