{% extends 'base.html.twig' %}
{% block body %}
    <p>{{ message }}</p>
    <div class="row">
        <div class="col-6">
            {{ form_start(form) }}
                {{ form_widget(form) }}
                <button class="btn">{{ button_label|default('Save') }}</button>
            {{ form_end(form) }}
        </div>
        <div class="col-6">
            <ul>
            {% for category in categories %}
                <li>{{ category.name }}</li>
            {% endfor %}
            </ul>
        </div>
    </div>
{% endblock %}